BoxLayout:
    orientation: "vertical"
    with_previous: False
    container: container
    title: "KBGallery"
    ActionBar:
        height: "48dp"
        pos_hint: {'x': 0, 'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                app_icon: 'data/icon.png'
                title: root.title
                with_previous: root.with_previous
                on_release: root.with_previous and app.load_previous()
            ActionOverflow:
                ActionButton:
                    text: "Reload"
                    on_release: app.reload_content()
                ActionButton:
                    text: "Clear Image Cache"
                    on_release: app.clear_image_cache()
                ActionButton:
                    text: "Settings"
                    on_release: app.open_settings()
                ActionButton:
                    text: "Log"
                    on_release: app.send_log()
                ActionButton:
                    text: "Exit"
                    on_release: app.stop()
                ActionButton:
                    text: "About"
                    on_release: app.about()
    FloatLayout:
        id: container