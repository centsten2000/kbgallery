#:import la kivy.adapters.listadapter

<Direntry@FloatLayout+AsyncImage>:
    text: 'default'
    source: None
    Label:
        pos_hint: {'center_x': 0.5, 'y': 0}
        text_size: (240, None)
        text: root.text
        size: self.texture_size
        size_hint: (None, None)
    Label:
        pos_hint: {'center_x': 0.5, 'top': 1}
        text_size: (240, None)
        text: ""
        size: self.texture_size
        size_hint: (None, None)


[DirentryListRow@SelectableView+BoxLayout]:
    size_hint_y: None
    height: 240
    Direntry:
        text: ctx.dir1
        source: ctx.thumb1
    Direntry:
        text: ctx.dir2
        source: ctx.thumb2

ListView:
    id: lv
    adapter:
        la.ListAdapter(
        data = [],
        args_converter = lambda row_index, rec: {'dir1': rec[0]['direntry'], 'dir2': rec[1]['direntry'], 'thumb1': rec[0]['thumb_url'], 'thumb2': rec[1]['thumb_url']},
        template='DirentryListRow')
